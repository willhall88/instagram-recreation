<!DOCTYPE html>
<html>
<head>
  <title>Instagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Willstagram</a>
    </div>
      <% if !user_signed_in? %>
        <div class="navbar-collapse collapse">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => "navbar-form navbar-right", role:"form"})  do |f|%>
            <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:"form-control"%>
            </div>
            <%= f.submit "Sign in", class: "btn btn-success" %> 
          <% end %>
        </div><!--/.navbar-collapse -->
      <% else %>
        <div class="navbar-collapse collapse">
          <div class="navbar-form navbar-right">
            <%= link_to('Edit registration', edit_user_registration_path, class: "btn btn-primary") %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "btn btn-danger") %>
          </div>
        </div>
      <% end %>
    </div><!--/.navbar-collapse -->
  </div>
</div>


<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>



 

<%= yield %>

<footer>
  <p>&copy; WJRHALL 2014</p>
</footer>
    
</body>
</html>
